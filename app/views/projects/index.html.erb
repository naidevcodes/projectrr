<%= "#{pluralize(@projects.count, "project")}" %>

<table>
  <thead>
    <tr>
      <td>Name</td>
      <td>Description</td>
      <td>Start Date</td>
      <td>Projected End Date</td>
      <td>Actual End Date</td>
      <td>Budget</td>
      <td>Cost</td>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td><%= project.start_date %></td>
        <td><%= project.projected_end_date %></td>
        <td><%= project.actual_end_date %></td>
        <td><%= project.budget %></td>
        <td><%= project.cost %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to('New Project', new_project_path) %>