<%= "#{pluralize(@projects.count, "project")}" %>

<table id="projects">
  <thead>
    <tr>
      <td>Name</td>
      <td>Description</td>
      <td>Start Date</td>
      <td>Projected End Date</td>
      <td>Actual End Date</td>
      <td>Budget</td>
      <td>Cost</td>
      <td>Action</td>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td><%= project.start_date %></td>
        <td><%= project.projected_end_date %></td>
        <td><%= project.actual_end_date %></td>
        <td><%= project.budget %></td>
        <td><%= project.cost %></td>
        <td><a href="projects-show.html"><%= link_to(project.name, project) %></a></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to('New Project', new_project_path) %>
