<%= render 'shared/errors', object: @task %>
<%= form_for([@project, @task]) do |f| %>
  <fieldset>
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :due_date %><br>
      <%= f.text_field :due_date %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  </fieldset>

<% end %>